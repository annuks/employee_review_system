<link rel="stylesheet" href="/css/sign_up.css" />
<body>
    <form action="/user/create" method="post">
      <div class="form-outline mb-2">
        <input type="text" name="name" class="form-control" placeholder="Employee Name" />
      </div>

      <div class="form-outline mb-2">
        <input type="email" name="email"  placeholder="Employee Email"  class="form-control" />
      </div>

      <div class="row">
        <div class="col-md-6">
          <div class="form-outline mb-2">
            <label class="form-label" >Gender</label>
            <select class="form-select" name="gender">
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
            </select>   
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-outline mb-2">
            <label class="form-label">Joning Date</label>
            <input class="form-control" type="date" name="joining" placeholder="Employee Joining Date" required/>    
          </div>
        </div>
      </div>

      <div class="form-outline mb-2">
        <label class="form-label">Department</label>
        <select class="form-select"  name="department">
          <option value="HR">HR</option>
          <option value="Sales">Sales</option>
          <option value="Production">Production</option>
          <option value="Marketting">Marketting</option>
          <option value="Operation">Operation</option>
        </select>
      </div>

      <!-- Password input -->
      <div class="form-outline mb-2">
        <input type="password" name="password" class="form-control"  placeholder="Password" />
      </div>

      <!-- Password input -->
      <div class="form-outline mb-2">
        <input type="password" name="confirm_password" class="form-control" placeholder="Confirm Password" />
      </div>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4 float-end" placeholder="Confirm Password">
        Sign up
      </button>
    </form>
</body>
